{% extends 'base.html.twig' %}

{% block title %}Carnet de Voyage{% endblock %}

{% block body %}


    <h1 class="text-center text-black mt-lg-5">Etapes du voyage {{ voyage.lieu }}</h1>

    <div class="container">
        <div class="row mt-5">

            {% for etape in etapes %}
                <div class="col-md-4">
                    <div class="card mb-3 mt-3 p-1 d-flex align-items-lg-stretch">
                        <h3 class="card-header">{{ etape.lieu }}</h3>
                        <div class="card-body">
                            <h5 class="card-title"> {{ etape.date ? etape.date|date('d-m-Y') : '' }}</h5>
                            <h6 class="card-subtitle text-muted"></h6>
                        </div>
                        <img src="" alt="image principale">
                        <div class="card-body">
                            <p class="card-text">{{ etape.titre }}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Cras justo odio</li>
                            <li class="list-group-item">Dapibus ac facilisis in</li>
                            <li class="list-group-item">Vestibulum at eros</li>
                        </ul>
                        <a href="{{ path('etapes_show', {'slug': etape.slug}) }}" class="btn btn-outline-dark">Voir</a>
                        <a href="{{ path('etapes_edit', {'slug': etape.slug}) }}" class="btn btn-outline-danger">Editer</a>
                    </div>
                </div>

            {% else %}

                no records found

            {% endfor %}
        </div>

        <a href="{{ path('voyage_new') }}">Create new</a>
    </div>
{% endblock %}
